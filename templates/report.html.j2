<!DOCTYPE html>
<html>
    <head>
        <title>Report</title>
        <style>
            html {
                font-family: sans-serif;
                font-size: 9pt;
                width: 21cm;

            }
            table {
                border-bottom: 1px solid black;
            }
            .summary {
                width: auto;
                margin-top: 2em;
                margin-right: 0px;
                margin-left: auto;
            }
            .summarytext {
                font-size: 12pt;
            }
            .sessions {
                width: 100%;
            }
            thead {
                background-color: black;
                print-color-adjust: exact;
                color: white;
            }
            .center {
                text-align: center;
            }
            .left {
                text-align: left;
            }
            .right {
                text-align: right;
            }
            .nums {
                font-variant-numeric: tabular-nums;
                text-align: right;
            }
            th, td {
                padding: 0 8px;
            }
        </style>

    </head>
    
    <body>
        <h1>Monatlicher Verbrauchsbericht {{ date.strftime('%B %Y') }}</h1>

        <table class="information">
            <thead>
                <tr>
                    <th colspan="3">Informationen</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>

        <table class="sessions">
            <thead>
                <tr>
                    <th colspan="2"></th>
                    <th colspan="3">Zeitspanne</th>
                    <th colspan="3">ZÃ¤hlerwert (kWh)</th>
                </tr>
                <tr>
                    <th></th>
                    <th>RFID</th>
                    <th>Start</th>
                    <th>Ende</th>
                    <th>Dauer</th>
                    <th>Start</th>
                    <th>Ende</th>
                    <th>Differenz</th>
                </tr>
            </thead>
            <tbody>
            {% for session in sessions %}
                <tr>
                    <td class="center">{{ loop.index }}</td>
                    <td>{{ session.rfidCard }}</td>
                    <td>{{ session.start.strftime('%d.%m.%Y %H:%M:%S') }}</td>
                    <td>{{ session.end.strftime('%d.%m.%Y %H:%M:%S') }}</td>
                    <td class="nums">{{ session.duration }}</td>
                    <td class="nums">{{ "{0:n}".format(session.meterAtStart | round(2)) }}</td>
                    <td class="nums">{{ "{0:n}".format(session.meterAtEnd | round(2)) }}</td>
                    <td class="nums">{{ "{0:n}".format(session.consumption | round(2)) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <table class="summary">
            <thead>
                <tr>
                    <th colspan="3" class="summarytext left">Zusammenfassung</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="summarytext">Gesamtverbrauch:</td>
                    <td class="summarytext nums">{{ consumption }}</td>
                    <td class="summarytext">kWh</td>
                </tr>
                <tr>
                    <td class="summarytext">Gesamtkosten</td>
                    <td class="summarytext nums">{{ costs }}</td>
                </tr>
            </tbody>
        </table>

    </body>

</html>
